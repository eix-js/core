{
    "name": "@eix-js/core",
    "version": "0.0.10",
    "description": "the core of the eix game engine",
    "main": "dist/bundle.cjs.js",
    "module": "dist/bundle.esm.js",
    "files": [
        "dist"
    ],
    "private": false,
    "scripts": {
        "lint": "eslint src/**/*.ts",
        "lint:fix": "prettier-eslint \"**/*.ts\" --write",
        "test": "nyc mocha",
        "test:run": "mocha",
        "coverage": "nyc report --reporter=text-lcov | coveralls",
        "docs": "typedoc --out docs ./src",
        "prebuild": "rimraf dist",
        "build": "rollup -c",
        "postbuild": "tsc --emitDeclarationOnly",
        "deploy:gh-pages": "cd static && npm run build && cd ../ && gh-pages -d static/dist",
        "deploy:npm": "npm publish --access public",
        "deploy": "npm run build && npm run deploy:gh-pages && npm run deploy:npm"
    },
    "husky": {
        "hooks": {
            "pre-commit": "lint-staged"
        }
    },
    "lint-staged": {
        "linters": {
            "*.{js,ts,scss,json}": [
                "npm run lint:fix",
                "git add ."
            ]
        },
        "ignore": [
            "**/dist/bundle.*.js"
        ]
    },
    "repository": {
        "type": "git",
        "url": "git+https://github.com/eix-js/core"
    },
    "keywords": [
        "engine",
        "core",
        "eix"
    ],
    "author": "Matei Adriel",
    "license": "SEE LICENSE IN LICENSE",
    "bugs": {
        "url": "https://github.com/eix-js/core/issues"
    },
    "homepage": "https://github.com/eix-js/core/#readme",
    "devDependencies": {
        "@babel/core": "^7.4.5",
        "@babel/plugin-proposal-class-properties": "^7.4.4",
        "@babel/plugin-proposal-object-rest-spread": "^7.4.4",
        "@babel/preset-env": "^7.4.5",
        "@babel/preset-typescript": "^7.3.3",
        "@types/chai": "^4.1.7",
        "@types/mocha": "^5.2.7",
        "@types/node": "^12.0.8",
        "@typescript-eslint/eslint-plugin": "^1.10.2",
        "@typescript-eslint/parser": "^1.10.2",
        "chai": "^4.2.0",
        "coveralls": "^3.0.4",
        "eslint": "^5.16.0",
        "eslint-config-prettier": "^5.0.0",
        "eslint-config-standard": "^12.0.0",
        "eslint-plugin-import": "^2.17.3",
        "eslint-plugin-jsdoc": "^7.2.3",
        "eslint-plugin-node": "^9.1.0",
        "eslint-plugin-promise": "^4.1.1",
        "eslint-plugin-standard": "^4.0.0",
        "gh-pages": "^2.0.1",
        "husky": "^2.4.1",
        "lint-staged": "^8.2.1",
        "mocha": "^6.1.4",
        "nyc": "^14.1.1",
        "prettier": "^1.18.2",
        "prettier-eslint": "^8.8.2",
        "prettier-eslint-cli": "^4.7.1",
        "rimraf": "^2.6.3",
        "rollup": "^1.15.6",
        "rollup-plugin-babel": "^4.3.2",
        "rollup-plugin-node-resolve": "^5.0.3",
        "rollup-plugin-terser": "^5.0.0",
        "rollup-plugin-typescript": "^1.0.1",
        "source-map-support": "^0.5.12",
        "ts-node": "^8.1.0",
        "tslib": "^1.10.0",
        "typedoc": "^0.14.2",
        "typedoc-plugin-external-module-name": "^2.1.0",
        "typedoc-vortex-theme": "0.0.2",
        "typescript": "^3.4.4"
    },
    "dependencies": {
        "@eix-js/utils": "0.0.5"
    }
}
